    "problemMatchers": [
      {
        "name": "mcp-testing",
        "owner": "mcp-testing",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^\\s+at\\s+(.*)\\s+\\((.+):(\\d+):(\\d+)\\)$",
          "file": 2,
          "line": 3,
          "column": 4,
          "message": 1
        }
      }
    ],
    "taskDefinitions": [
      {
        "type": "mcp-testing",
        "required": [
          "taskType"
        ],
        "properties": {
          "taskType": {
            "type": "string",
            "description": "The type of test task to run"
          },
          "testPath": {
            "type": "string",
            "description": "Path to test file or directory"
          },
          "pattern": {
            "type": "string",
            "description": "Pattern to match test files"
          },
          "framework": {
            "type": "string",
            "description": "Test framework to use"
          },
          "watch": {
            "type": "boolean",
            "description": "Run tests in watch mode"
          },
          "parallel": {
            "type": "boolean",
            "description": "Run tests in parallel"
          },
          "maxWorkers": {
            "type": "number",
            "description": "Maximum number of parallel workers"
          },
          "timeout": {
            "type": "number",
            "description": "Test timeout in milliseconds"
          }
        }
      }
    ],
    "configuration": {
      "title": "MCP ACS Testing Manager",
      "properties": {
        "mcp-testing.server.serverPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to MCP testing server executable.\n\nLeave empty to use the bundled server or global installation.\n\n**Note:** Changes require server restart."
        },
        "mcp-testing.server.autoStart": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Automatically start MCP server when VS Code opens."
        },
        "mcp-testing.server.timeout": {
          "type": "number",
          "default": 30000,
          "minimum": 1000,
          "maximum": 300000,
          "markdownDescription": "Server timeout in milliseconds.\n\n**Default:** 30000 ms (30 seconds)\n\n**Range:** 1000-300000 ms"
        },
        "mcp-testing.server.logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info",
          "markdownDescription": "Log level for MCP ACS Testing Manager."
        },
        "mcp-testing.server.retryAttempts": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "maximum": 10,
          "markdownDescription": "Number of retry attempts for server connection failures.\n\n**Default:** 3"
        },
        "mcp-testing.server.retryDelay": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 10000,
          "markdownDescription": "Delay between retry attempts in milliseconds.\n\n**Default:** 1000 ms"
        },
        "mcp-testing.test.defaultFramework": {
          "type": "string",
          "enum": [
            "jest",
            "mocha",
            "pytest",
            "vitest",
            "jasmine",
            "ava",
            "auto"
          ],
          "default": "auto",
          "markdownDescription": "Default test framework to use.\n\n**auto**: Automatically detect from project"
        },
